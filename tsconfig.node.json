    "include": [
        "./*.config.js",
        "./*.config.ts",
        "./scripts/**/*.ts",
        "./scripts/**/*.tsx",
        "./scripts/**/*.js",
        "./scripts/**/*.jsx"
    ],
    "exclude": ["./src/**/*"]
}
